@using Domain
@model PlayModel

@{
    var size = GameSystem.ActiveGame.GetRuleVal(RuleType.BoardSize);

    <div class="board-grid m-auto mw-md">
        @for (int y = 0; y < size; y++) {
            <div class="board-row d-flex">
                @for (int x = 0; x < size; x++) {
                    var roundedClass = "";
                    if (y == 0 && x == 0) {
                        roundedClass = "rounded-top-left";
                    } else if (y == size-1 && x == 0) {
                        roundedClass = "rounded-bottom-left";
                    } else if (y == 0 && x == size-1) {
                        roundedClass = "rounded-top-right";
                    } else if (y == size-1 && x == size-1) {
                        roundedClass = "rounded-bottom-right";
                    }

                    var x2 = GameSystem.BaseConversion.MapToBase26(x);
                    var y2 = y + 1;

                    <div class="board-box">
                        <div class="board-inner @roundedClass" x="@x2" y="@y2"><span class="badge">@x2 @y2</span></div>
                    </div>
                }
            </div>
        }
    </div>
}